{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES2019",
    "declaration": false,
    "skipLibCheck": true,
    "lib": ["es2022", "dom"],
    "paths": {
      "@components": ["./src/components"]
    }
  },
  "exclude": ["dist", "node_modules", "**/*.stories.tsx"]
}
